<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
<div class="container">

<div class="row">
	<aside class="col-md-3">
		<ul class="list-group">

		<a class="list-group-item " href="/account"> Account overview  </a>
			<a class="list-group-item " href="/account/orderhistory"> My Orders </a>
			<a class="list-group-item active" href="/account/review"> My Comments </a>
			<a class="list-group-item" href="#"> Return and refunds </a>
            <a class="list-group-item " href="/account/myvouchers"> Vouchers</a>
			<a class="list-group-item " href="/account/loyaltyprogram"> Rewards Program</a>
		</ul>
	</aside> <!-- col.// -->
	<main class="col-md-9">
        
        <!-- =================== COMPONENT REVIEW ====================== -->
        <div class="row" style="margin:auto;">
            <aside class="col-lg-12">
               <div class="card">
                    <div class="card-body">
                    <h4>Reviews </h4>
                    <span> View and manage reviews </span>
                    </div>
                </div>
                <br>
               
                <div class="card mb-4 review" style="height:605px ;">
                    
                    <div class="card-body">
                        <div class="search-bar" style="">
                            <i class="fa fa-magnifying-glass" style=" position: absolute;right:-210px;top:30px;width:30%;float:right; "></i>
                            <input type="text" class="form-control" name=""  id="searchbar" onkeyup="search_animal()"  placeholder="Search Something" style="width:30%;float:right;"> 
                            
                        </div>
                        
                         <br> 
                        <div class="scroll review" style="overflow-y:scroll;margin-top:30px;height:500px;">
                            {{#each reviews}}
                            <blockquote class="review-list">
                                <div class="icontext">
                                    {{!-- <img src="/uploads/myImage-1660035606378.jpg" class="img-xs icon rounded-circle"> --}}
                                    <img src="/{{this.User.imageFilePath}}" class="img-xs icon rounded-circle">
                                    <div class="text">
                                        <h6 class="mb-0"> {{this.Product.name}} </h6>
                                        <div class="rating-wrap">
                                            <ul class="rating-stars">
                                                <li style="width:{{convert this.ProductRating}}%" class="stars-active">
                                                    <img src="/images/misc/stars-active.svg" alt="">
                                                </li>
                                                <li> <img src="/images/misc/starts-disable.svg" alt=""> </li>
                                            </ul>
                                            <b class="dot"></b>
                                            <small class="label-rating text-muted"> Commented on  {{dateFormat this.createdAt 'DD MMM YYYY'}}</small>
                                        </div>
                                    </div>
                                </div> <!-- icontext.// -->
                                <div class="mt-3">
                                    <div class="card" style="border:none;">
                                        <div class="card-body">
                                            <p>
                                                {{this.ProductRemarks}}
                                            </p> 
                                        </div>
                                        
                                    </div>
                                </div>
                                <br>
                            </blockquote>
                            <hr>
                            <br>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </aside>
        </div>
	</main> <!-- col.// -->
</div>

</div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->



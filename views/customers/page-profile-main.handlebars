<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y">
<div class="container">

<div class="row">
	<aside class="col-md-3">
		<ul class="list-group">
			<a class="list-group-item active " href="/account"> Account overview  </a>
			<a class="list-group-item " href="/account/orderhistory"> My Orders </a>
			<a class="list-group-item" href="/account/review"> My Comments </a>
			<a class="list-group-item" href="#"> Return and refunds </a>
            <a class="list-group-item " href="/account/myvouchers"> Vouchers</a>
			<a class="list-group-item " href="/account/loyaltyprogram"> Rewards Program</a>
		</ul>
		<br>
		<article class="card  mb-3">
			<div class="card-body " >
				<h5 class="card-title mb-4">Recent orders </h5>	
				

				
				{{#each orders}}
					<div class="row" >
					{{#each this.OrderItems}}	
					
						<figure class="itemside mb-3" style="overflow-y:scroll ;">
							<div class="aside"><img src="images/items/3.jpg" class="border img-sm"></div>
							<figcaption class="info">
								<time class="text-muted"><i class="fa fa-calendar-alt"></i> {{dateFormat this.createdAt 'DD MMM YYYY'}}</time>
								<p>{{this.Product.name}} </p>
								<span class="text-success">Pending </span>
							</figcaption>
						</figure>
					 <!-- col.// -->
					{{/each}}
					</div>
					<hr>
				{{/each}}
				
				
					<figure class="itemside mb-3 order-scroll" style="overflow-y:scroll ;height:100px;">
						<div class="aside"><img src="images/items/3.jpg" class="border img-sm"></div>
						<figcaption class="info">
							<time class="text-muted"><i class="fa fa-calendar-alt"></i> 12.09.2019</time>
							<p>Ladies bag original leather </p>
							<span class="text-success">Shipped  </span>
						</figcaption>
					</figure>
				
				 <!-- col.// -->
				
			</div> <!-- row.// -->

			<div style="display:flex;justify-content:center;align-items:center;width:100%;">
				<a href="#" class="btn btn-outline-primary" > See all orders  </a>
			</div>
			<br>
			 <!-- card-body .// -->
		
		</article> <!-- col.// -->
	</aside>
	<main class="col-md-9">
		<article class="card mb-3">
			<div class="card-body">
				<div class="row">
					<div class="col-lg-10">
						<h4>My Profile</h4>
						<span>Manage and protect your account</span>
					</div>
					<div class="col-lg-2">
						
					</div>
				</div>
				
			</div>
		</article>
		<article class="card mb-3">
			<div class="card-body">
				<div class="row">
					<div class="col-lg-9">
						<figure class="icontext">
							
							<div class="content" style="padding-left:10px;">
								
								<strong><i class="fa fas fa-user"></i>&nbsp; Username </strong><br>{{user.username}}<br> <br> 
								<b> <i class="fa fa-solid fa-envelope"></i>&nbsp;  Email</b><br>{{user.email}}<br> <br> 

								<p>
									<i class="fa fas fa-map-marker"></i>&nbsp; <b>Address</b><br>  
									{{user.address}} 
								
								</p>
								<br>
							<button class="btn btn-primary" style="float: left;">
							<a href="/account/edit" style="color:white;text-decoration:none;">Edit</a>
						</button>
							
						</figure>
						
					</div>
					<div class="col-lg-3" style="border-left: 0.0625rem solid #efefef;">
						<div class="icon" style="display:flex;padding-top:50px;justify-content: center;">
								<img class="rounded-circle img-sm border" style='margin-bottom: 10px;'src="{{image}}">
								
						</div>
						<div class="edit" style="display:flex;justify-content: center;">
							<button class="btn btn-light btn--m btn--inline" style="">
							<a href="/account/edit" style="color:#3099F6;text-decoration:none;">Select Image</a>
						</button>
						</div>
						
						
					</div>
				</div>
			</div>
		</article>		
		<article class="card mb-3">		
			<div class="card-body">
				<article class="card-group">
					<figure class="card bg">
						<div class="p-3">
							 <h5 class="card-title">38</h5>
							<span>Orders</span>
						</div>
					</figure>
					<figure class="card bg">
						<div class="p-3">
							 <h5 class="card-title">5</h5>
							<span>Wishlists</span>
						</div>
					</figure>
					<figure class="card bg">
						<div class="p-3">
							 <h5 class="card-title">12</h5>
							<span>Vouchers</span>
						</div>
					</figure>
					<figure class="card bg">
						<div class="p-3">
							 <h5 class="card-title">50</h5>
							<span>Comments</span>
						</div>
					</figure>
				</article>
					
				
			</div>
		</article>	
				
				


				

		<!-- card.// -->

		 <!-- card.// -->

	</main> <!-- col.// -->
</div>

</div> <!-- container .//  -->
</section>

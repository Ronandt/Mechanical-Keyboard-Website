<form action="/order/data" method="POST">
	
  <div class="row">
    <div class="col-md-4 order-md-2 mb-4">
      <h4 class="d-flex justify-content-between align-items-center mb-3">
        <span class="text-muted">Cart</span>
        <span class="badge badge-secondary badge-pill">1</span>
      </h4>
      <ul class="list-group mb-3">
        <li class="list-group-item d-flex justify-content-between lh-condensed">
          <div>
            <h6 class="my-0">Your Purchase</h6>
            
          </div>
          
        </li>
		{{#each cart.cartProducts}}
        <li class="list-group-item d-flex justify-content-between lh-condensed">
				<figure class="itemside align-items-center mb-4">
					<div class="aside">
						{{!-- <div class="badge bg-secondary rounded-pill">{{this.CartItem.quantity}}</div> --}}
						<img src="/{{this.image}}" class="img-sm rounded border">
						
					</div>
					<figcaption class="info">
						<a href="#" class="title">{{this.name}} <br> {{this.category}}</a>
						<div class="price text-muted">${{multiply this.price this.CartItem.quantity}}
							
						</div> <!-- price .// -->
						
					</figcaption>
					<br>
					<strong class="" style="float:right;padding-left:30px;">X {{this.CartItem.quantity}}</strong>
				</figure>
        </li>
		{{/each}}
		<br>
		
			
			{{!-- <div >Discount: <strong style="padding-left:200px;">- 0.00</strong> </div>
			<div >Shipping Fee: <strong style="padding-left:200px;">Free</strong> </div>
			<div >Grand Total: <strong style="padding-left:200px;">${{amount}}</strong> </div> --}}
			
			
			
		
			{{!-- <dl class="dlist-align">
